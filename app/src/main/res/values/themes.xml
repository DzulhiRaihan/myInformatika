<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyInformatika" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#44985D</item> <!-- Warna latar -->
        <item name="android:textColor">#FFFFFF</item> <!-- Warna teks -->
        <item name="cornerRadius">10dp</item> <!-- Radius sudut -->
    </style>

    <style name="CustomToolBar" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#FFFF</item> <!-- Warna latar -->
        <item name="android:textColor">@color/black</item> <!-- Warna teks -->
        <item name="cornerRadius">10dp</item> <!-- Radius sudut -->
    </style>


    <style name="CustomText" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>
</resources>